
<footer class="footer-wrap{{^if @labs.subscribers}} no-subscriber{{/if}}">
	<div class="footer-social">
		{{#if @blog.facebook}}
		<a href="{{facebook_url}}"><i class="facebook"></i></a>
		{{/if}}
		{{#if @blog.twitter}}
		<a href="{{twitter_url}}"><i class="twitter"></i></a>
		{{/if}}
		{{>socialicons}}
	</div>
	<div class="footer-copyright">
		{{t "Copyright"}} &copy; {{date format="YYYY"}}, <a href="{{@blog.url}}">{{@blog.title}}</a>. {{t "All Right Reserved"}}.
		<br>
	</div>
</footer>